<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>Scover.Dialogs</AssemblyName>
    <RootNamespace>Scover.Dialogs</RootNamespace>
    <Company>$(Authors)</Company>
    <Authors>Scover</Authors>
    <Product>Dialogs</Product>
    <Description>A Windows TaskDialog wrapper that also supports navigation and hyperlinks.</Description>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <Title>Dialogs</Title>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <PackageIcon>icon.png</PackageIcon>
    <Copyright>(c) Scover 2022</Copyright>
    <RepositoryUrl>https://github.com/5cover/Dialogs</RepositoryUrl>
    <PackageTags>ui;taskdialog;dialog</PackageTags>
    <PackageReleaseNotes>Removed debug prints
simplified Dialog.Show()
Slightly improved documentation</PackageReleaseNotes>
    <Version>1.0.6</Version>
    <FileVersion>$(Version)</FileVersion>
    <AssemblyVersion>$(Version)</AssemblyVersion>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <CheckForOverflowUnderflow>True</CheckForOverflowUnderflow>
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <CheckForOverflowUnderflow>True</CheckForOverflowUnderflow>
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="XPThemes.manifest" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Vanara.Core" Version="3.4.13" />
    <PackageReference Include="Vanara.PInvoke.ComCtl32" Version="3.4.13" />
    <PackageReference Include="Vanara.PInvoke.Shared" Version="3.4.13" />
    <PackageReference Include="Vanara.PInvoke.User32" Version="3.4.13" />
  </ItemGroup>

  <ItemGroup>
    <None Update="icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>
